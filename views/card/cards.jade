        if(confirm("你只能认领一次名片，确定这是您的名片并认领？")){
          var id = $(this).data("id");
          var self=this;
          $.ajax("/user/connet-card",{
            dataType:"json",
            type:"post",
            data:{
              id:id
            },
            success:function(data){
              if(data.success){
                alert("认领成功")
                window.location.href=window.location.href
              }else{
                if(data.isnotlogin){
                  alert("请先登录")
                  window.location.href="/user/login"
                }else{
                  alert(data.info)
                }

              }
            },
