            //-       a.action#add_fav(href="javascript:void(0);")
            //-         i.icon-heart
            //-         span 收藏 #{locals.favs?locals.favs.length:0}
            //-       a.action#bdshare.bdshare_t.bds_tools.get-codes-bdshare(style="float:none;")
            //-         i.icon-new-window
