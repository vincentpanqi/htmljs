        HtmlJS.util.ajax("/comment/add",{md:$("#q_comment_content").val(),target_id:"question_#{question.id}"},"post",function(data){
            if(data.success){
              if($("#q_comment_list .comment-item").length==0){
                $("#q_comment_list").html("")
